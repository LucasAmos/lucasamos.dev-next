{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "target": "ES2021",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/readingTime.ts",
    "pages/sidebar.ts",
    "components/date.tsx",
    "lib/posts.ts"
  ],
  "exclude": ["node_modules"]
}
